                <div class="rsvp">
                    <h4>Click the button to RSVP</h4>
                    <button class="btn btn-info">@Html.ActionLink("RSVP NOW!", "Rsvp")</button>
                </div>
            </div>
            <!-- END TIMER -->
            <div class="row">
                <div class="col-sm-4 pads">dsdf</div>
