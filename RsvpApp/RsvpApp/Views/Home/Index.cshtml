
@{
    ViewBag.Title = "Taurus O.";
}

<div class="nomobile">
    <div id="layer"></div>
    <!-- START HEADER -->
    <section id="header">
        <div class="container" style="padding-top: 0;">
            <header>
                <!-- HEADLINE -->
                <h1 data-animated="GoIn"><b>Taurus Omejia 50th Birthday</b> Celebration happening in...
                </h1>
            </header>
            <!-- START TIMER -->
            <div id="timer" data-animated="FadeIn" class="dark-layer">
